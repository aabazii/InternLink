    <div class="site-wrap">
        <!-- HOME -->
        <section class="section-hero overlay inner-page bg-image"
            style="background-image: url('images/backi.webp');"
            id="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1 class="text-white font-weight-bold">Post Internship
                        </h1>
                        <div class="custom-breadcrumbs">
                            <a href="#">Home</a> <span
                                class="mx-2 slash">/</span>
                            <a href="#">Internship</a> <span
                                class="mx-2 slash">/</span>
                            <span class="text-white"><strong>Post
                                    Internship</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="site-section">
            <div class="container">
                <div class="row align-items-center mb-5">
                    <div class="col-lg-8 mb-4 mb-lg-0">
                        <div class="d-flex align-items-center">
                            <div>
                                <h2>Post Internship</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-lg-12">
                        <form class="p-4 p-md-5 border rounded" action="/internships/create" method="POST" enctype="multipart/form-data">
                            <h3 class="text-black mb-5 border-bottom pb-2">Internship Details</h3>
                            <div class="form-group">
                              <label for="logo">Logo</label>
                              <input type="file" class="form-control-file" id="logo" name="logo" required>
                            </div>
                            <div class="form-group">
                              <label for="name">Internship Title</label>
                              <input type="text" class="form-control" id="name" placeholder="Product Designer" name="name" required>
                            </div>
                            <div class="form-group">
                              <label for="location">Location</label>
                              <input type="text" class="form-control" id="location" placeholder="e.g. New York" name="location" required>
                            </div>
                            <div class="form-group">
                              <label for="deadline">Deadline</label>
                              <input type="Date" class="form-control" id="deadline" name="deadline" required>
                            </div>
                            <div class="form-group">
                              <label for="internType">Internship Type</label>
                              <select class="selectpicker border rounded" id="internType" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Internship Type" name="internType" required>
                                <option type="text">Part Time</option>
                                <optiontype="text">Full Time</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="type">Type</label>
                              <select class="selectpicker border rounded" id="type" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Type" name="type" required>
                                <option>Remote</option>
                                <option>On-Site</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="experience">Experience</label>
                              <select class="selectpicker border rounded" id="experience" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Experience" name="experience" required>
                                <option>None</option>
                                <option>1-2 years preferred</option>
                                <option>3-5 years preferred</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="payment">Internship Payment</label>
                              <select class="selectpicker border rounded" id="payment" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Payment" name="payment" required>
                                <option>Paid</option>
                                <option>Not Paid</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="details">Details</label>
                              <textarea class="form-control" id="details" name="details" rows="5" required></textarea>
                            </div>
                            <div class="col-6">
                              <button type="submit" class="btn btn-block btn-primary btn-md">Add Internship</button>
                            </div>
                          </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- SCRIPTS -->
    <script src="/js/jquery.min.js"></script>
