<!doctype html>
<html lang="en">
<head>
    <title>InternLink</title>
    <meta charset="utf-8">
    <meta name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
</head>
<body id="top">
    </div> <!-- .site-mobile-menu --> <!-- HOME -->
    <section class="home-section section-hero overlay bg-image"
        style="background-image: url('/images/backi.webp');" id="home-section">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-12">
                    <div class="mb-5 text-center">
                        <h1 class="text-white font-weight-bold">Get Your Dream Internship</h1>

                    </div>
                    <form method="get" class="search-jobs-form"
                        onsubmit="handleSearch(event)">
                        <div class="row mb-5">
                            <div
                                class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                                <input type="text"
                                    class="form-control form-control-lg"
                                    placeholder="Internship name..."
                                    name="searchText" id="searchText">
                            </div>
                            <div
                                class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                                <div class="dropdown">
                                    <button
                                        class="selectpicker btn-white btn-lg dropdown-toggle w-100"
                                        type="button" id="dropdownCity"
                                        data-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">Select
                                        City</button>
                                    <div class="dropdown-menu w-100"
                                        aria-labelledby="dropdownCity">
                                        <div class="px-3">
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="radio" name="city"
                                                    id="city-thessaloniki"
                                                    value="Thessaloniki">
                                                <label class="form-check-label"
                                                    for="city-thessaloniki">Thessaloniki</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="radio" name="city"
                                                    id="city-heraklion"
                                                    value="Heraklion">
                                                <label class="form-check-label"
                                                    for="city-heraklion">Heraklion</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="radio" name="city"
                                                    id="city-athens"
                                                    value="Athens">
                                                <label class="form-check-label"
                                                    for="city-athens">Athens</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="radio" name="city"
                                                    id="city-patra"
                                                    value="Patras">
                                                <label class="form-check-label"
                                                    for="city-patra">Patra</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="radio" name="city"
                                                    id="city-larissa"
                                                    value="Larissa">
                                                <label class="form-check-label"
                                                    for="city-larissa">Larissa</label>
                                            </div>
                                            <!-- Add other cities as needed -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                                <div class="dropdown">
                                    <button
                                        class="selectpicker btn-white btn-lg dropdown-toggle w-100"
                                        type="button" id="dropdownJobType"
                                        data-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">Select Job
                                        Type</button>
                                    <div class="dropdown-menu w-100"
                                        aria-labelledby="dropdownJobType">
                                        <div class="px-3">
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="jobType"
                                                    id="job-part-time"
                                                    value="Part-Time">
                                                <label class="form-check-label"
                                                    for="job-part-time">Part
                                                    Time</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="jobType"
                                                    id="job-full-time"
                                                    value="Full-Time">
                                                <label class="form-check-label"
                                                    for="job-full-time">Full
                                                    Time</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="jobType"
                                                    id="job-remote"
                                                    value="Remote">
                                                <label class="form-check-label"
                                                    for="job-remote">Remote</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="jobType"
                                                    id="job-onsite"
                                                    value="On-site">
                                                <label class="form-check-label"
                                                    for="job-onsite">On-site</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="payment"
                                                    id="pa"
                                                    value="Paid">
                                                <label class="form-check-label"
                                                    for="payment">Paid</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                    type="checkbox"
                                                    name="payment "
                                                    id="job-onsite"
                                                    value="Not Paid">
                                                <label class="form-check-label"
                                                    for="payment">Not Paid</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="col-12 col-sm-6 col-md-6 col-lg-3 mb-4 mb-lg-0">
                                <button type="submit"
                                    class="btn btn-primary btn-lg btn-block text-white btn-search"><span
                                        class="icon-search icon mr-2"></span>Search
                                    Internship</button>
                            </div>
                        </div>
                    </form>
                    <script>
                        function handleSearch(event) {
                            event.preventDefault();
                            const searchText = document.getElementById(
                                'searchText').value.trim();
                            const city = document.querySelector(
                                'input[name="city"]:checked')?.value || '';
                            const jobTypes = Array.from(document
                                .querySelectorAll(
                                    'input[name="jobType"]:checked')).map(
                                el => el.value).join(',');
                            const payment = Array.from(document.querySelectorAll('input[name="jobType"]:checked')).some(el => el.value === 'Paid') ? 'Paid' : 'Not Paid';
                            let url = '/listing';
                            const params = new URLSearchParams();
                            if (searchText) params.append('searchText', searchText);
                            if (city) params.append('city', city);
                            if (jobTypes) params.append('jobType', jobTypes);
                            if (payment) params.append('payment', payment);
                            if (params.toString()) {
                                url += `?${params.toString()}`;
                            }
                            window.location.href = url;
                        }
                    </script>
                </div>
            </div>
        </div>
    </section>
    </div> <!-- SCRIPTS -->
</body>
</html>